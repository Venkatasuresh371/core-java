package streamOperations;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

public class SelectionOperations 
{
	public static void main(String[] args)
	{
		ArrayList<String> names = new ArrayList<String>();
		
		names.add("David"); 
		names.add("Johnson");
		names.add("Samontika");
		names.add("Brijesh");
		names.add("John");
		
		List<String> filter1 = names.stream().filter(n->n.length()>5).collect(Collectors.toList());
		names.stream().filter(n->n.length()>5).forEach(n->System.out.print(n+" "));
		System.out.println(filter1);
		System.out.println();
		
		List<String> distinct1 = names.stream().distinct().collect(Collectors.toList());
		names.stream().distinct().forEach(n->System.out.print(n+" "));
		System.out.println(distinct1);
		System.out.println();
		
		List<String> limit1 = names.stream().limit(3).collect(Collectors.toList());
		names.stream().limit(3).forEach(n->System.out.print(n+" "));
		System.out.println(limit1);
		System.out.println();
		
		List<String> skip1 = names.stream().skip(2).collect(Collectors.toList());
		names.stream().skip(2).forEach(n->System.out.print(n+" "));
		System.out.println(skip1);
		System.out.println();
	}
}
